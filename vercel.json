{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "npm run build",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/.*", "dest": "/api/$1" },
    { "src": "/callback", "dest": "/api/callback.js" },
    { "src": "/health", "dest": "/api/health.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}